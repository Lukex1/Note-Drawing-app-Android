<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Notes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Notes"
    Shell.FlyoutBehavior="Flyout"
    Title="Note">

    <ShellContent
        FlyoutIcon="brush_black.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Title="Draw"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Title="Files" FlyoutIcon="files.png"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Title="Projects" FlyoutIcon="grupa.png"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Title="Options" FlyoutIcon="settings.png"/>
</Shell>